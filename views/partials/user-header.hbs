<header class="" >
    <div class="row" >

        <div class="col-md-6 col-8">
            <div class="row">
                <div class="p-2 pl-2 ml-2 mb-2" style="width: 5rem;height:4rem;">
                    <img src="https://th.bing.com/th/id/OIP.TCwGAWrTlXP7H4WZ6P4FnQHaHb?w=164&h=180&c=7&o=5&pid=1.7"
                        class="img-fluid img-responsive img-thumbnail rounded-circle p-2" alt="Responsive image">
                </div>

                <div>

                    <h1 class="text-center p-2 "><span
                            style="text-shadow: -1px 0 yellow, 0 1px yellow, 1px 0 blue, 0 -1px red;"
                            class="text-danger font-weight-bold ">Home</span> <span
                            style="text-shadow: -1px 0 red, 0 2px red, 2px 0 red, 0 -1px red;"
                            class="text-warning">Chef</span></h1>

                </div>
            </div>

        </div>
        <div class="col-md-6 col-4">
            <div class="nav pl-6  ml-6" style="position: fixed;">

                <nav style="width: 100%; height:100%;" class="navbar navbar-expand-lg navbar-light ">

                    <button class="navbar-toggler " style="background-color: brown;"  type="button" data-toggle="collapse" data-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse ml-auto" id="navbarNav">
                        <ul class="navbar-nav  ml-auto text-danger ">
      <li class="nav-item active">
        <a class="nav-link text-danger text-bold ml-auto" href="/bakerOne">Products<span class="sr-only">(current)</span></a>
      </li>
      <li class="nav-item">
        <a class="nav-link text-danger text-bold" href="/cart">Cart  <span class="badge badge-success" id="cart-count">{{cartCount}}</span></a>
      </li>
      {{#if user}}
      <li class="nav-item">
        <a class="nav-link text-danger text-bold " href="/orders">Order</a>
      </li>
      {{/if}}
      
    </ul>
                        <div class="dropdown">
                            <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton"
                                data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                                {{#if user}}
                                {{user.Name}}
                                {{else}}
                                Account
                                {{/if}}

                            </button>
                            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                {{#if user}}
                                <a class="dropdown-item" href="/logout">Logout</a>
                                {{else}}
                                <a class="dropdown-item" href="/login">Login</a>
                                {{/if}}


                            </div>
                        </div>
                    </div>
                </nav>
            </div>


        </div>
    </div>
</header>