 <section>

       <div class="container mt-5 ml-5 pl-5 ">
            <div class="row pl-5 ml-5">
                {{#each categoriestable}}
             <a href="/eachCategoryItems/{{this._id}}">  <div class="col-md-4  pl-5">
               <p class="pl-3 ml-4" href="/eachCategory/{{this._id}}"  style="padding-left:5px;color: darkred; background-color:rgb(199, 133, 146);width:6rem;">     {{this.name}}</p>
                    </div></a> 
                {{/each}}

                
            </div>
        </div>
    </section>

<section>
        <div class="container mt-3">
            <div class="row">
                {{#each products}}
                <div class="col-md-4 mt-4">
                    <div class="card" style="height: 26em; background-color:white; border-color:gray;">
                        <img class="card-img-top"
                            src="/product-images/{{this._id}}.jpg"
                            alt="Card image cap" 
                            style="height: 14em;">
                        <div class="card-body">
                            <h5 class="card-title text-center">{{this.name}}</h5>
                            
                            <p class="ml-2 text-center">Rs {{this.price}}</p>
                            <p class="ml-1 text-center">{{this.shopname}}</p>
                            <div class="row pl-5">
                                   {{#if user}}
     
                            <button onclick="addToCart('{{this._id}}')" class="btn btn-primary  pl-2 ml-4 ">Add to cart</button>
                    {{else}}
                            <a class="btn btn-primary" href="/login">Add to cart</a>
                     {{/if}} 
                            
                        
                    
                       <a class="btn btn-danger pl-2 ml-4 " href="/place-order/{{this._id}}">Buy Now</a>
                        </div>
                        </div>
                    </div>


                </div>
                {{/each}}

                
            </div>
        </div>
    </section>
