<header class="">
    <div class="row">

        <div class="col-md-6 col-8">
            <div class="row">
                <div class="p-2 pl-2 ml-2 mb-2" style="width: 5rem;height:4rem;">
                    <img src="https://th.bing.com/th/id/OIP.TCwGAWrTlXP7H4WZ6P4FnQHaHb?w=164&h=180&c=7&o=5&pid=1.7"
                        class="img-fluid img-responsive img-thumbnail rounded-circle p-2" alt="Responsive image">
                </div>

                <div>

                    <h1 class="text-center p-3 "><span
                            style="text-shadow: -1px 0 yellow, 0 1px yellow, 1px 0 blue, 0 -1px red;"
                            class="text-danger font-weight-bold ">Home</span> <span
                            style="text-shadow: -1px 0 red, 0 2px red, 2px 0 red, 0 -1px red;"
                            class="text-warning">Chef</span></h1>

                </div>
            </div>

        </div>
        <div class="col-md-6 col-4">
            <div class="nav">

                <nav style="width: 100%; height:100%;;" class="navbar navbar-expand-lg navbar-light ">

                    <button class="navbar-toggler " type="button"  style="background-color: crimson;"  data-toggle="collapse" data-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse ml-auto" id="navbarNav">
                        <ul class="navbar-nav  ml-auto">
                            <li class="nav-item active">
                                <a class="nav-link text-danger ml-auto" href="/home">Home <span
                                        class="sr-only">(current)</span></a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-danger" href="/about">About</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-danger" href="/ourBakers">Our Bakers</a>
                            </li>
                            <li class="nav-item ">
                                <a class="nav-link text-danger" href="#">Contact</a>
                            </li>
                        </ul>
                        <div class="dropdown">
                            <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" 
                                data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                                {{#if user}}
                                {{user.Name}}
                                {{else}}
                                Account
                                {{/if}}

                            </button>
                            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                {{#if user}}
                                <a class="dropdown-item" href="/logout">Logout</a>
                                {{else}}
                                <a class="dropdown-item" href="/login">Login</a>
                                {{/if}}


                            </div>
                        </div>
                    </div>
                </nav>
            </div>


        </div>
    </div>
</header>
<section>
    <div class="container mt-4">
        <div>
            <p class="text-dark " style=" font-size: 25px;"> <span
                    style="text-shadow: -2px 0 rgb(255, 240, 33), 0 2px rgb(231, 237, 240), 2px 0 rgb(38, 0, 255), 0 -1px rgb(231, 192, 18);"
                    class="text-dark font-weight-bold "><i><b>Are You Hungry???..</b></i></span></p>
        </div>
        <div class="row">
            <div>
                <h1 class="pl-5 text-center ml-5"><span
                        style="text-shadow: -2px 0 rgb(53, 21, 2), 0 2px rgb(255, 251, 0), 4px 0 blue, 0 -1px rgb(84, 9, 107);"
                        class="text-danger font-weight-bold "><i><b>....then Catch Our Items.....</b></i></span> </h1>
            </div>
            <div>
                <a class="btn btn-danger text-white ml-5 pl-4"
                    style="align-items: center ;font-size:24px;width:10rem ;border-radius: 15px;"
                    href="/allProducts"><b>View</b></a>
            </div>

        </div>

    </div>
</section>
<section>
    <div class="container bg-info">
        <h1 class="pl-5 text-center mt-5"><span
                style="text-shadow: -2px 0 rgb(53, 21, 2), 0 2px rgb(0, 183, 255), 4px 0 blue, 0 -1px rgb(84, 9, 107);"
                class="text-white font-weight-bold "><i><b>..Choose Our Bakers To Serve You The Best..</b></i></span>
        </h1>


        <div class="row">
            {{#each allvendors}}
            <div class="col-md-3">

                <div class="card mt-5 p-3" 
                    style="height: 25em; background-color:coral;border-radius:9px;border-color:rgb(122, 6, 29)">
                    <a href="/eachBaker/{{this._id}}"> <img class="card-img-top img-fluid rounded-circle"
                            src="/vendor-images/{{this._id}}.jpg" style="height: 14em;" alt="Card image cap">
                        <div class="card-body" >
                            <h5 class="card-title text-white text-center">{{this.shopname}}</h5>


                            <a class="btn btn-danger text-white p-1 "
                                style="align-items: center ;font-size:18px;width:12rem ;border-radius: 15px;"
                                href="/eachBaker/{{this._id}}"><b>View Products</b></a>
                        </div>
                    </a>

                </div>


            </div>

            {{/each}}

        </div>
    </div>
</section>
